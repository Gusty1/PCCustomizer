@inherits PCCustomizer.Components.BaseComponent
@inject IDialogService DialogService

<MudGrid Class="d-flex align-center">

    <MudItem>
        <MudButton @onclick="OpenComputerInfoDialogAsync" Variant="Variant.Filled" Color="Color.Primary">
            我的電腦資訊
        </MudButton>
    </MudItem>

    <MudItem Class="flex-grow-1">
        <MudText class="my-2" Color="Color.Error" Typo="Typo.h6" Align="Align.Center">
            ※ 商品價格不保證一定是最新的，價格請以
            <MudLink OnClick="@(() => OpenExternalLink("https://www.coolpc.com.tw/evaluate.php"))"
                     Typo="Typo.h6"
                     Color="Color.Info">
                原價屋
            </MudLink>
            官網為準
        </MudText>
    </MudItem>
</MudGrid>

@code {
    private Task OpenComputerInfoDialogAsync()
    {
        var options = new DialogOptions { CloseOnEscapeKey = true };

        return DialogService.ShowAsync<ComputerInfoDialog>("MyComputerInfo Dialog", options);
    }
}